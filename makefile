#------------------------------------------------------
# Makefile for C/C++ Program
#------------------------------------------------------

TARGET=wavesample

LIB=
INC=

#------------------------------------------------------
# Default Parameters
#------------------------------------------------------

CC=g++
OPT=

#------------------------------------------------------
# Compile Option
#------------------------------------------------------

-include makefile.opt

#------------------------------------------------------
# Definition
#------------------------------------------------------

.SUFFIXES: .c .cc .h. .o

#---
# Source Files
#---

SRC=$(shell ls *.cc)
HED=$(shell ls *.h)
OBJ=$(SRC:.cc=.o)

#------------------------------------------------------
# rules
#------------------------------------------------------

all: $(TARGET)
$(TARGET): $(OBJ)
	$(CC) $(OPT) -o $(TARGET) $(OBJ) $(LIB)

.cc.o:
	$(CC) $(OPT) -c $< $(MPI)

clean:
	rm -f $(TARGET) $(TARGET).exe $(OBJ) test.wav

#--------------------------------------------------
